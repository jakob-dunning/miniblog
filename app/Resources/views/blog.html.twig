{% extends 'base.html.twig' %}

{% block title %}{{ blog_title }}{% endblock %}

{% block body %}
	<h1>{{ blog_title }}</h1>
	
	{% for post in posts %}
		<article>
			<header>
				<h2>
				    <a href="/show/{{ post.id }}">{{ post.title }}</a>
			    </h2>
			</header>
			<img src="{{ post.image }}" />
			<p>
			    {{ post.text }}
		    </p>
		</article>
		<nav>
			<ul>
				<li><a href="/edit/{{ post.id }}">Edit this post</a></li>
			</ul>
		</nav>
	{% endfor %}
{% endblock %}