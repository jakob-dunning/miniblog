{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
	<h1>Blog title</h1>
	
	{% for post in posts %}
		<article>
			<header>
				<h2>
				    <a href="/show/{{ post.id }}">{{ post.title }}</a>
			    </h2>
			</header>
			<img src="{{ post.image }}" />
			<p>
			    {{ post.text }}
		    </p>
		</article>
	{% endfor %}
{% endblock %}